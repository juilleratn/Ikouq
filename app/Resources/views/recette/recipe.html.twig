{% extends 'base.html.twig' %}
{% block title %}{{ recette.nom }}{% endblock %}
{% block body %}


    <div class="titre">
            <h1>{{ recette.nom }}</h1>
        </div>
    <div class="container">
        <div class="photo">
                <img style="width: 70%;height:75%;border-radius: 15px" src="/image/{{ recette.urlPhoto }}" alt="{{ recette.nom }}">
        </div>
            <div class="info">
                <div class="topbar">
                    <ul class="regime">
                        <li>{{ recette.plat }} /</li>
                        <li>{{ recette.regime }}</li>
                    </ul>
                </div>
                <div class="part">
                    <ul class="pers">
                        <li> Pour {{ recette.part }} personnes</li>
                        <li>{{ recette.duree }} minutes</li>
                    </ul>
                </div>
            </div>
    </div>
    <div class="hero">
        <div class="instruction">{{ recette.instruction }}</div>
        <div class="colonne_droite">
            <ul>
                <table>
                    <thead>
                    <tr>

                        <th>Photo</th>
                        <th>quantit√©</th>
                        <th>ingredient</th>
                        <th>mesure</th>
                        <th>Nutri-score</th>
                        <th>allergene</th>
{#                        Mettre a part et nom pour chaque ingredient #}
                    </tr>
                    </thead>
                    <tbody>
                    {% for ingredient in ingredients %}

                        <tr>

                            <td><img style="width:75px; height:75px;" src="/image/{{ ingredient.urlPhoto }}"></td>
                            <td>{% for quantite in quantites %} {{ quantite.fkIngredient }} {% endfor %}</td>
                            <td>{{ ingredient.nom }} </td>
                            <td>{{ ingredient.mesure }}</td>
                            <td>{{ ingredient.nutriScore }}</td>
                            <td>{{ ingredient.allergene }}</td>

                        </tr>

                    {% endfor %}
                    </tbody>
                </table>

            </ul>
        </div>
    </div>
    <ul>
        <li>
            {% for quantite in quantites %}
                {{ quantite.fk_ingredient }}
            {% endfor %}
        </li>
        <li>
            <a href="{{ path('recette_index') }}">Retour aux recettes</a>
        </li>


    </ul>
{% endblock %}
